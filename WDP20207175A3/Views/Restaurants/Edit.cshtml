@model WDP20207175A3.Models.Restaurant

@{
    ViewData["Title"] = "Edit";
}

<div class="bgi">
    <div class="bgc bgs">
        <div id="quote" style="padding-bottom:100px;">
            <h1 class="niccone" style="padding-top:0px;">Edit Restaurant</h1>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label text-light"></label>
                        <select asp-for="Name" class="form-control">
                            <option value="" selected disabled>Select a restaurant</option>
                            <option>Belluci’s Italian</option>
                            <option>Blu Ginger</option>
                            <option>Chairman & Yip</option>
                            <option>Dickson Asian Noodle House</option>
                            <option>Italian and Sons</option>
                            <option>Jewel of India</option>
                        </select>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label text-light"></label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Url" class="control-label text-light"></label>
                        <input asp-for="Url" class="form-control" />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image" class="control-label text-light"></label>
                        <input asp-for="Image" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" /> 
                        <span style="color: white"> | </span>
                        <a asp-action="Index"><button type="button" class="btn btn-primary">Back to Restaurants Page</button></a> <!--Restaurants page should be where Index is-->
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
